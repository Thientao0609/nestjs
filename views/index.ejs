<!DOCTYPE html>
<html>
<head>
    <title>Danh sách nhân viên</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>

<body>
<div class="container mt-5">
    <h2>Quản lý nhân viên</h2>

    <a href="/nhanvien/add" class="btn btn-success mb-3">Thêm nhân viên</a>
    <a href="/logout" class="btn btn-secondary mb-3 float-end">Đăng xuất</a>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>#</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>khu</th>
            <th>Email</th>
            <th>Quê quán</th>
            <th>Hành động</th>
        </tr>
        </thead>

        <tbody>
        <% nhanvien.forEach(function(nhanvien, index) { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= nhanvien.hoten %></td>
                <td><%= nhanvien.ngaysinh %></td>
                <td><%= nhanvien.khu %></td>
                <td><%= nhanvien.email %></td>
                <td><%= nhanvien.quequan %></td>
                <td>
                    <a href="/nhanvien/edit/<%= nhanvien.id %>" class="btn btn-warning btn-sm">Sửa</a>
                    <a href="/nhanvien/delete/<%= nhanvien.id %>" class="btn btn-danger btn-sm"
                       onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</a>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</div>
</body>
</html>
